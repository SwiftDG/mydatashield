<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Verify Your Email</h2>
          
          <!-- Debug message for when email fails -->
          <% if (debug) { %>
            <div class="alert alert-info">
              <strong>Note:</strong> Email delivery issue. Check your Render logs for the verification code.
            </div>
          <% } %>

          <!-- Error message display -->
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>

          <p class="text-center">
            We sent a verification code to: <strong><%= email %></strong>
          </p>
          <p class="text-muted text-center small">
            Check your inbox and enter the 6-digit code below. It will expire in 10 minutes.
          </p>

          <form action="/verify" method="POST">
            <input type="hidden" name="email" value="<%= email %>">
            
            <div class="mb-3">
              <label for="code" class="form-label">Verification Code</label>
              <input 
                type="text" 
                class="form-control form-control-lg text-center" 
                id="code" 
                name="code" 
                placeholder="Enter 6-digit code" 
                maxlength="6"
                pattern="[0-9]{6}"
                required
              >
              <div class="form-text">Enter the 6-digit code from your email</div>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg">
              Verify Email
            </button>
          </form>

          <div class="text-center mt-3">
            <a href="/login" class="btn btn-link">Back to Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>